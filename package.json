{
  "name": "dream",
  "version": "0.0.0",
  "description": "dream orm",
  "main": "dist/src/index.js",
  "repository": "https://github.com/avocadojesus/dream.git",
  "author": "avocadojesust",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && npx tsc",
    "core:sync": "CORE_DEVELOPMENT=1 npx ts-node boot/sync.ts && yarn copy:models",
    "sync": "npx ts-node boot/sync.ts && yarn copy:models",
    "copy:boilerplate": "npx ts-node boot/copy-boilerplate.ts",
    "copy:models": "yarn ensure:models-file && yarn build && CORE_DEVELOPMENT=1 npx ts-node src/bin/copy-models.ts",
    "ensure:models-file": "CORE_DEVELOPMENT=1 npx ts-node boot/ensure-models-file.ts",
    "db:migrate": "ALREADY_AT_PROJECT_ROOT=1 npx ts-node src/bin/migrate.ts && yarn sync",
    "core:db:migrate": "ALREADY_AT_PROJECT_ROOT=1 npx ts-node src/bin/migrate.ts && yarn sync-core",
    "db:drop": "npx ts-node src/bin/db-drop.ts",
    "db:create": "npx ts-node src/bin/db-create.ts",
    "spec": "CORE_DEVELOPMENT=1 jest --runInBand --forceExit",
    "console": "yarn build && CORE_DEVELOPMENT=1 NODE_ENV=development npx ts-node --project ./tsconfig.json ./src/test-app/conf/repl.ts",
    "dream": "npx ts-node ./boot/cli.ts",
    "postinstall": "yarn copy:boilerplate"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/jest-plugin-context": "^2.9.5",
    "jest": "^29.5.0",
    "jest-plugin-context": "^2.9.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@types/luxon": "^3.3.0",
    "@types/pg": "^8.6.6",
    "@types/pluralize": "^0.0.29",
    "commander": "^10.0.0",
    "dotenv": "^16.0.3",
    "kysely": "^0.24.2",
    "kysely-codegen": "^0.10.0",
    "luxon": "^3.3.0",
    "pg": "^8.10.0",
    "pluralize": "^8.0.0",
    "yaml": "^2.2.1"
  }
}
