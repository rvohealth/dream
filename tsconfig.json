{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,

    /* rootDir and outDir together help maintain dist/src folder */
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
